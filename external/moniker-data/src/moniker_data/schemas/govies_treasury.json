{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "US Treasury Securities",
  "description": "Schema for US Treasury bills, notes, and bonds",
  "type": "object",
  "required": ["ASOF_DATE", "CUSIP", "COUNTRY", "TENOR", "YIELD", "PRICE"],
  "properties": {
    "ASOF_DATE": {
      "type": "string",
      "format": "date",
      "description": "Pricing date"
    },
    "CUSIP": {
      "type": "string",
      "description": "CUSIP identifier",
      "pattern": "^[A-Z0-9]{9}$"
    },
    "COUNTRY": {
      "type": "string",
      "description": "Issuing country (ISO 3166-1 alpha-2)",
      "const": "US"
    },
    "TENOR": {
      "type": "string",
      "description": "Maturity tenor bucket",
      "enum": ["3M", "6M", "1Y", "2Y", "3Y", "5Y", "7Y", "10Y", "20Y", "30Y"]
    },
    "COUPON": {
      "type": "number",
      "description": "Annual coupon rate (decimal)",
      "minimum": 0,
      "maximum": 0.2
    },
    "YIELD": {
      "type": "number",
      "description": "Yield to maturity (decimal)",
      "minimum": -0.05,
      "maximum": 0.3
    },
    "PRICE": {
      "type": "number",
      "description": "Clean price (percentage of par)",
      "minimum": 50,
      "maximum": 200
    },
    "DURATION": {
      "type": "number",
      "description": "Modified duration (years)",
      "minimum": 0,
      "maximum": 35
    },
    "CONVEXITY": {
      "type": ["number", "null"],
      "description": "Convexity measure"
    }
  }
}
